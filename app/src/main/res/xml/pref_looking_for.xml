<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="@string/pref_key_looking_for_male"
        android:title="@string/pref_title_looking_for_sex_male" />

    <SwitchPreference
        android:key="@string/pref_key_looking_for_female"
        android:title="@string/pref_title_looking_for_sex_female" />

    <EditTextPreference
        android:key="@string/pref_key_looking_for_min_age"
        android:title="@string/pref_title_looking_for_min_age"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:defaultValue="18"
        android:maxLength="2"
        android:maxLines="1" />

    <EditTextPreference
        android:key="@string/pref_key_looking_for_max_age"
        android:title="@string/pref_title_looking_for_max_age"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:defaultValue="99"
        android:maxLength="2"
        android:maxLines="1" />

    <MultiSelectListPreference
        android:key="@string/pref_key_looking_for_race"
        android:title="@string/pref_title_looking_for_race"
        android:entries="@array/pref_list_race_titles"
        android:entryValues="@array/pref_list_race_values"
        android:dialogTitle="@string/pref_title_looking_for_race"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
