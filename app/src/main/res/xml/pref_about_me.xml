<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/pref_key_user_name"
        android:title="@string/pref_title_user_name"
        android:selectAllOnFocus="true"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1"
        android:maxLength="144"
        />

    <ListPreference
        android:key="@string/pref_key_user_sex"
        android:title="@string/pref_title_user_sex"
        android:defaultValue="-1"
        android:entries="@array/pref_list_sex_titles"
        android:entryValues="@array/pref_list_sex_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <EditTextPreference
        android:key="@string/pref_key_user_age"
        android:title="@string/pref_title_user_age"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:defaultValue="18"
        android:maxLength="2"
        android:maxLines="1"
        />

    <ListPreference
        android:key="@string/pref_key_user_race"
        android:title="@string/pref_title_user_race"
        android:defaultValue="-1"
        android:entries="@array/pref_list_race_titles"
        android:entryValues="@array/pref_list_race_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <MultiSelectListPreference
        android:key="@string/pref_key_user_interests"
        android:title="@string/pref_title_user_interests"
        android:entries="@array/pref_list_interests_titles"
        android:defaultValue="@array/empty_array"
        android:entryValues="@array/pref_list_interests_values"
        android:dialogTitle="@string/pref_title_user_interests"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <EditTextPreference
        android:key="@string/pref_key_user_msg"
        android:title="@string/pref_title_user_msg"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="2"
        android:maxLength="144"
        />

</PreferenceScreen>
