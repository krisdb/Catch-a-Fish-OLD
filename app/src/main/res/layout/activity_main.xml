<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    >
    <ToggleButton
            android:id="@+id/btn_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="@string/button_text_available_on"
            android:textOff="@string/button_text_available_off"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_available"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />

    <com.qualcode.catchafish.RadarView
        android:id="@+id/radarView"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/txt_status"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/txt_nearby_devices_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radarView"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:text="@string/text_fish_nearby"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/txt_nearby_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_nearby_devices_header"
        android:layout_centerInParent="true"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />

    <Button
            android:id="@+id/btn_about_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_text_about_me"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            />

        <Button
            android:id="@+id/btn_looking_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_text_looking_for"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            />
</RelativeLayout>
